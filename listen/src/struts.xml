<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.objectFactory" value="spring"/>
    <package name="listen" namespace="/" extends="struts-default">
        <!-- 注册拦截器 -->
        <interceptors>
            <interceptor name="privilegeInterceptor"
                         class="com.listen.web.interceptor.PrivilegeInterceptor"></interceptor>
            <!-- 配置拦截器栈 -->
            <interceptor-stack name="myStack">
                <interceptor-ref name="privilegeInterceptor">
                    <param name="excludeMethods">login,register,checkAccount</param>
                </interceptor-ref>
                <interceptor-ref name="defaultStack"></interceptor-ref>
            </interceptor-stack>
        </interceptors>
        <!-- 指定默认拦截器栈 -->
        <default-interceptor-ref name="myStack"></default-interceptor-ref>

        <action name="StudentAction_*" class="studentAction" method="{1}">
            <result name="toHome" type="redirect">/home.jsp</result>
            <result name="toAdminHome" type="redirect">/admin/Home.jsp</result>
            <result name="toLogin" type="redirect">/login.jsp</result>
            <result name="login">/login.jsp</result>
            <result name="register">/login.jsp</result>
            <result name="showList">/checkPointList.jsp</result>
            <allowed-methods>
                login,register,checkAccount,loginOut,initGrade,submitGrade,initSubject,getScore,pageTest,getCurrentHistoryList
            </allowed-methods>
        </action>

        <action name="AdminAction_*" class="adminAction" method="{1}">
            <result name="toDetails">/admin/details.jsp</result>
            <result name="LibrariesList">/admin/getLibraryList.jsp</result>
            <result name="seeDetail">/admin/details.jsp</result>
            <result name="toLogin">/login.jsp</result>
            <allowed-methods>getCurrentScoreSet,seeDetails,getLibraryDetails,,loginOut</allowed-methods>
        </action>

        <action name="LibraryAction_*" class="libraryAction" method="{1}">
            <result name="success">/admin/Home.jsp</result>
            <!-- 待完成页面 -->
            <result name="librariesList">/library/chooseLibraries.jsp</result>
            <allowed-methods>upload,getAllLibraries,deleteLibrary</allowed-methods>
        </action>

        <action name="CheckAction_*" class="checkAction" method="{1}">
            <result name="showLibraryDet" type="redirectAction">
                <param name="actionName">AdminAction_seeDetails</param>
                <param name="namespace">/</param>
                <param name="currentCheck">${currentCheck}</param>
                <param name="currentGrade">${currentGrade}</param>
            </result>
            <allowed-methods>addLibToLP,delLibInLibPool</allowed-methods>
        </action>

    </package>
</struts>