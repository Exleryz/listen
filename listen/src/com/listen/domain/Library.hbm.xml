<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.listen.domain.Library" table="Library">
        <id name="id">
            <generator class="native"></generator>
        </id>
        <property name="src"/>
        <property name="title"/>
        <property name="sonCount"/>
        <many-to-one name="teacher" class="com.listen.domain.Student" column="teacherId" cascade="none"/>
        <set name="libraryPoolSet" table="SysLibraryLibraryPool" cascade="none">
            <key column="libid"></key>
            <many-to-many class="com.listen.domain.LibraryPool" column="lpid"/>
        </set>
    </class>
</hibernate-mapping>